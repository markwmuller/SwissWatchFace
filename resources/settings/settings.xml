<settings>
    
    <setting propertyKey="@Properties.invertColors" title="@Strings.invertColors">
        <settingConfig type="boolean" />
    </setting>
    
    <setting propertyKey="@Properties.simSecSyncPulse" title="@Strings.simSecSyncPulse">
        <settingConfig type="boolean" />
    </setting>
    
    <setting propertyKey="@Properties.lowBattWarning" title="@Strings.lowBattWarning">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.notificationsIcon" title="@Strings.notificationsIcon">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.mode24hr" title="@Strings.mode24hr">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.secondsBehaviour" title="@Strings.secondsBehaviour">
        <settingConfig type="list">
            <listEntry value="1">@Strings.SecsAlwaysOn</listEntry>
            <listEntry value="2">@Strings.SecsShowOnGlance</listEntry>
            <listEntry value="3">@Strings.SecsAlwaysOff</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.dateStringBehaviour" title="@Strings.dateStringBehaviour">
        <settingConfig type="list">
            <listEntry value="1">@Strings.DateSysLang</listEntry>
            <listEntry value="2">@Strings.DateForceEnglish</listEntry>
            <listEntry value="3">@Strings.DateForceGerman</listEntry>
            <listEntry value="4">@Strings.DateOff</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.dateStringHighContrast" title="@Strings.dateStringHighContrast">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.dateStringLargeFont" title="@Strings.dateStringLargeFont">
        <settingConfig type="boolean" />
    </setting>

</settings>
